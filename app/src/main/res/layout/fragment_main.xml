<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.jy.FragmentMain">

    <com.qmuiteam.qmui.widget.QMUITabSegment
        android:id="@+id/mainTabSegment"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:qmui_tab_has_indicator="true"
        app:qmui_tab_icon_position="top"
        app:qmui_tab_indicator_height="2dp"
        app:qmui_tab_indicator_top="false"></com.qmuiteam.qmui.widget.QMUITabSegment>

    <com.qmuiteam.qmui.widget.QMUIViewPager
        android:id="@+id/contentViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toBottomOf="@id/mainTabSegment"
        app:layout_constraintEnd_toEndOf="parent"></com.qmuiteam.qmui.widget.QMUIViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>